{{>layout/header}}
<div class="col-8">
    <div class="card" style="border: none">
        <div class="row">
            <div class="col-8">
                <div class="card-body">
                    <a href="/">
                        <img src="/images/logo.png">
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{{#categoryid}}
<div class="col-8">
    <div class="card" style="border: none">
        <div class="row">
            <div class="col-8">
                <div class="card-body">
                    <h1>커리큘럼 공유하기</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
            </div>
            {{#user}}
                <div class="form-group">
                    <label for="author"> 작성자 </label>
                    <input type="text" class="form-control" id="author" placeholder="{{name}}" readonly>
                </div>
                <div class="form-group" hidden>
                    <label for="email"> email </label>
                    <input type="text" class="form-control" id="email" value="{{email}}" readonly>
                </div>
            {{/user}}
            <div class="form-group">
                <label for="content"> 내용 </label>
                <textarea class="form-control" id="content" placeholder="내용을 입력하세요"></textarea>
            </div>
            <div class="form-group" hidden>
                <label for="categoryid"> 카테고리 id </label>
                <input type="text" class="form-control" id="categoryid" value="{{categoryid}}" readonly>
            </div>
            <div class="form-group">
                <label for="categoryid"> 카테고리 이름 </label>
                <input type="text" class="form-control" id="categoryid" value="{{categoryname}}" readonly>
            </div>
        </form>
        <a href="/{{categoryid}}" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-save">등록</button>
    </div>
</div>
{{/categoryid}}
{{>layout/footer}}